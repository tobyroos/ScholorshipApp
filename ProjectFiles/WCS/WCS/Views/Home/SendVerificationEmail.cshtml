@model WCS.Models.HomeViewModels.ConfirmEmailViewModel

<h2>Confirm Email</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <button type="submit" class="btn btn-default">Request Verification Email</button>
        </form>
    </div>
</div>

